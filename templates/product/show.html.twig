{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

<h1>Fiche produit</h1>

<img src="{{ asset('uploads/images/products/' ~ product.image ) }}" alt="imageProduit" />

<ul>
    <li>{{ product.name }}</li>
    <li>{{ product.description }}</li>
    <li>{{ product.price }}</li>
    <li>{{ product.stock }}</li>
    <li>{{ product.active }}</li>
    <li>{{ product.createdAt|date('d/m/Y H:i:s') }}</li>
    <li>{{ product.updatedAt|date('d/m/Y H:i:s') }}</li>
    <li>{{ product.category.name }}</li>

</ul>

{% if product is empty %}
    <p>Aucun produit trouv√©.</p>
{% endif %}



{% endblock %}
